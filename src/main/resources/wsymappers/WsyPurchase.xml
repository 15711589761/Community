    <!--修改采购信息-->
    <update id="updatePurchase" parameterType="com.smart.community.wsyjavabean.Tbl_purchase">
        update tbl_purchase
        <set>
            purchase_name = #{purchase_name},
            purchase_model = #{purchase_model},
            purchase_quantity = #{purchase_quantity},
            purchase_price = #{purchase_price}
         </set>
        <where>
            <if test="purchase_name != null and purchase_name != '' ">
                and purchase_id = #{purchase_id}
            </if>
            <if test="purchase_model != null and purchase_model != '' ">
                and purchase_id = #{purchase_id}
            </if>
            <if test="purchase_quantity != null and purchase_quantity != '' ">
                and purchase_id = #{purchase_id}
            </if>
            <if test="purchase_price != null and purchase_price != '' ">
                and purchase_id = #{purchase_id}
            </if>
        </where>
    </update>

    <!--删除采购信息-->
    <delete id="deletePurchase">
        delete from tbl_purchase where purchase_id = #{purchase_id}
    </delete>

</mapper>